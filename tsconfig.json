{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es6",
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "./lib",
		"declaration": true,
		"strict": true
	},
	"lib": ["ES2021"],
	"include": ["src"],
	"exclude": ["node_modules", "**/__tests__/*"],
	"typedocOptions": {
		"entryPoints": ["src/index.ts"],
		"out": "docs"
	}
}
